{
  "extends": [
    "@tsconfig/strictest/tsconfig",
    "@tsconfig/node18/tsconfig",
    "@tsconfig/esm/tsconfig",
  ],
  "compilerOptions": {
    "exactOptionalPropertyTypes": false,
    "lib": [
      "es2023",
      "DOM",
    ],
    "typeRoots": [
      "node_modules/@types",
    ],
    "outDir": "dist",
    "inlineSourceMap": true,
  },
  "include": [
    "**/*.ts",
    ".*.js",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}